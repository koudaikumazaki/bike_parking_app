= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  %h2.text-center.text-2xl.sm:text-3xl.my-10 新規登録
  .text-left.mx-auto.my-10{:class => "w-11/12 sm:w-1/2"}
    .my-5
      = f.label :name, "ユーザー名"
      %br/
      = f.text_field :name, class: "border form w-full", placeholder: '30文字以内で入力してください。'
    .my-5
      = f.label :email, "メールアドレス"
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "border form w-full", placeholder: 'メールアドレスを入力してください。'
    .my-5
      = f.label :password, "パスワード"
      %br/
      = f.password_field :password, autocomplete: "new-password", class: "border form w-full", placeholder: '半角英数字6文字以上'
      %div
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "border form w-full", placeholder: 'パスワード（確認用）'
    .actions.text-center.my-10
      = f.submit "新規登録", class: "button w-full"
= render "devise/shared/links"
